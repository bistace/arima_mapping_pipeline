Bootstrap: docker
From: ubuntu:20.04

%help
    apptainer run --bind /env:/env --pwd $(pwd) --no-home --containall pipeline.img 01_mapping_arima.sh \
        fastq_prefix \
        experiment_label \
        path_to_fastq_DIR \
        reference.fasta \
        threads

%environment
    export PATH=/opt/bin:$PATH

%files
    01_mapping_arima.sh /opt/bin
    filter_five_end.pl /opt/bin
    get_stats.pl /opt/bin
    two_read_bam_combiner.pl /opt/bin

%post
    export DEBIAN_FRONTEND=noninteractive
    apt update && apt upgrade -y
    apt install -y bwa samtools picard-tools perl
    chmod -R a+rwx /opt/bin 

    
